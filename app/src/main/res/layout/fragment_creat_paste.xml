<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.mainscreen.createpaste.CreatePasteFragment">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <EditText
            android:id="@+id/EditText_createPaste_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="title" />

        <EditText
            android:id="@+id/EditText_createPaste_private"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="3"
            android:hint="private"
            android:inputType="number" />

        <EditText
            android:id="@+id/EditText_createPaste_expireData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="5"
            android:hint="expireData" />

        <EditText
            android:id="@+id/EditText_createPaste_format"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="3"
            android:hint="format" />

        <EditText
            android:id="@+id/EditText_createPaste_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="15"
            android:hint="code" />

        <Button
            android:id="@+id/Button_createPaste_create"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="create" />
    </LinearLayout>
</FrameLayout>